<!doctype html>
<head>
    <link rel="stylesheet" href="\js\bower_components\angular-material\angular-material.css">
    <link rel="stylesheet" href="\css\datepicker.css">
</head>
<html>
<body ng-app='myApp' ng-controller="AppCtrl as ctrl" layout="row" ng-cloak>
  <div flex="30" layout="column" layout-padding>

    <h4>Foto</h4>
    <md-input-container>
      <label>Fotos Disponibles</label>
      <md-select ng-model="selectedFoto" ng-change="selectChanged()">
        <md-option ng-repeat="foto in fotos" ng-value="foto">{{foto.name}}</md-option>
      </md-select>
    </md-input-container>

    <h4>Fecha</h4>
    <md-datepicker ng-model="myDate" ng-change="reqDate()" md-placeholder="Enter date"></md-datepicker>
    
    <h4>Hora</h4>
    <md-input-container>
      <label>Hora</label>
      <md-select ng-model="time" ng-change="selectedHour()">
        <md-option ng-repeat="time in times" ng-value="{{time}}">{{time.metadata.metadata.hora.substr(11,5)}}</md-option>
      </md-select>
    </md-input-container>

  </div>

  <div flex layout="column" layout-padding>
    <img ng-src="{{onDisplay}}" class="caelus">
  </div>
  
  <!-- Angular -->
  <script src="\js\bower_components\angular\angular.js"></script>
  <script src="\js\bower_components\angular-animate\angular-animate.js"></script>
  <script src="\js\bower_components\angular-aria\angular-aria.js"></script>
  <script src="\js\bower_components\angular-messages\angular-messages.js"></script>

  <!-- Angular Material Library -->
  <script src='\js\bower_components\angular-material\angular-material.js'></script>
  <script src='\js\ng-datepicker.js'></script>
</body>
</html>
